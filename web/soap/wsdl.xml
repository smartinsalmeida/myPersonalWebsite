
<?xml version="1.0"?>
<definitions xmlns="http://schemas.xmlsoap.org/wsdl/" xmlns:tns="http://www.titomiguelcosta.com/blog/soap/server" xmlns:soap="http://schemas.xmlsoap.org/wsdl/soap/" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:soap-enc="http://schemas.xmlsoap.org/soap/encoding/" xmlns:wsdl="http://schemas.xmlsoap.org/wsdl/" name="Blog" targetNamespace="http://www.titomiguelcosta.com/blog/soap/server">
    <types>
        <xsd:schema targetNamespace="http://www.titomiguelcosta.com/blog/soap/server"/>
    </types>
    <portType name="BlogPort">
        <operation name="getPost">
            <documentation>Returns array with post entry details</documentation>
            <input message="tns:getPostIn"/>
            <output message="tns:getPostOut"/>
        </operation>
    </portType>
    <binding name="BlogBinding" type="tns:BlogPort">
        <soap:binding style="rpc" transport="http://schemas.xmlsoap.org/soap/http"/>
        <operation name="getPost">
            <soap:operation soapAction="http://www.titomiguelcosta.com/blog/soap/server#getPost"/>
            <input>
                <soap:body use="encoded" encodingStyle="http://schemas.xmlsoap.org/soap/encoding/" namespace="http://www.titomiguelcosta.com/blog/soap/server"/>
            </input>
            <output>
                <soap:body use="encoded" encodingStyle="http://schemas.xmlsoap.org/soap/encoding/" namespace="http://www.titomiguelcosta.com/blog/soap/server"/>
            </output>
        </operation>
    </binding>
    <service name="BlogService">
        <port name="BlogPort" binding="tns:BlogBinding">
            <soap:address location="http://www.titomiguelcosta.com/blog/soap/server"/>
        </port>
    </service>
    <message name="getPostIn">
        <part name="slug" type="xsd:string"/>
    </message>
    <message name="getPostOut">
        <part name="return" type="soap-enc:Array"/>
    </message>
</definitions>
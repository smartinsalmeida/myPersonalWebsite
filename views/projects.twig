{% extends 'layout.twig' %}

{% block body %}
    <div id="profile" class="main">
        <div class="yui3-g">
            <div class="yui3-u-2-3">
                <h1>Projects</h1>
                <dl>
                    {% for project in projects %}
                    <dt><a href="{{ path('project', {'slug': project.getAttribute('slug')}) }}">{{ project.getElementsByTagName('name').item(0).nodeValue }}</a></dt>
                    <dd>{{ project.getElementsByTagName('presentation').item(0).nodeValue }}</dd>
                    </li>
                    {% endfor %}
                </dl>
                <p></p>
            </div>
            <div class="yui3-u-1-3">
                <h1>In progress</h1>
            </div>
        </div>
    </div>
{% endblock %}
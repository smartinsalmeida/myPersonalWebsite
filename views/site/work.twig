{% extends 'layout.twig' %}

{% block body %}
    <div id="contacts" class="main">
        <h1>Work</h1>
        {% if not app.session.hasFlash('name') %}
        <form action="{{ path('work') }}" method="post" class="form-horizontal">
            <div class="control-group">
                {{ form_errors(form.name) }}
                {{ form_label(form.name, null, { 'label': 'Your name', 'label_attr': {'class': 'control-label'} }) }}
                <div class="controls">
                    {{ form_widget(form.name, {'attr': {'class': 'input-xlarge'}}) }}
                </div>
            </div>

            <div class="control-group">
                {{ form_errors(form.email) }}
                {{ form_label(form.email, null, { 'label': 'Your e-mail', 'label_attr': {'class': 'control-label'} }) }}
                <div class="controls">
                    {{ form_widget(form.email, {'attr': {'class': 'input-xlarge'}}) }}
                </div>
            </div>

            <div class="control-group">
                {{ form_errors(form.phone) }}
                {{ form_label(form.phone, null, { 'label': 'Your phone number', 'label_attr': {'class': 'control-label'} }) }}
                <div class="controls">
                    {{ form_widget(form.phone, {'attr': {'class': 'input-xlarge'}}) }}
                </div>
            </div>

            <div class="control-group">
                {{ form_errors(form.project) }}
                {{ form_label(form.project, null, { 'label': 'Project name', 'label_attr': {'class': 'control-label'} }) }}
                <div class="controls">
                    {{ form_widget(form.project, {'attr': {'class': 'input-xlarge'}}) }}
                </div>
            </div>

            <div class="control-group">
                {{ form_errors(form.description) }}
                {{ form_label(form.description, null, { 'label': 'Project description', 'label_attr': {'class': 'control-label'} }) }}
                <div class="controls">
                    {{ form_widget(form.description, {'attr': {'class': 'input-xlarge'}}) }}
                </div>
            </div>

            {{ form_rest(form) }}
            <input type="submit" name="submit" value="Submit" class="btn" />
        </form>
        {% else %}
            <p>Thanks {{ app.session.getFlash('name') }}, your message was sent successfully.</p>
            <p>I'll get back to you as soon as possible.</p>
        {% endif %}
    </div>
{% endblock %}
{% extends 'layout.twig' %}

{% block body %}
    <div id="music" class="main row-fluid">
        <div class="span12">
            <h1>Music</h1>
            <small>page {{ pages.current }} of {{ pages.pageCount }} in a total of {{ pages.totalItemCount }} videos</small>

            {% if pages.pageCount > 0 %}
            <div class="paginator">
                {% if pages.previous is defined %}
                    <a href="{{ path('music', { 'page': pages.previous }) }}">&lt; Previous</a> |
                {% endif %}

                <!-- Numbered page links -->
                {% for page in pages.pagesInRange %}
                    {% if page != pages.current %}
                    <a href="{{ path('music', { 'page': page }) }}">
                      {{ page }}
                    </a> |
                    {% else %}
                        {{ page }} |
                    {% endif %}
                {% endfor %}

                {% if pages.next is defined %}
                    <a href="{{ path('music', { 'page': pages.next }) }}">Next &gt;</a>
                {% endif %}
            </div>
            {% endif %}

            {% for video in videos %}
                <h2>{{ video.getVideoTitle() }}</h2>
                <iframe width="100%" height="330" src="http://www.youtube.com/embed/{{ video.getVideoId() }}" frameborder="0" allowfullscreen></iframe>
                <hr>
            {% endfor %}
        </div>
    </div>
{% endblock %}